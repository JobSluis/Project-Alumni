@model ProjectAlumni.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
    <link href="@Url.Content("~/Content/Login.css")" rel="stylesheet" type="text/css" />
    <div class="row">
        <h1 style="text-align:center;">Registreren</h1>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email",@class = "email" })
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password",@class = "password" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Password",@class = "password" })
            <input type="submit" class="submit" value="Register" />

        }
    </div>
<div class="background"></div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
