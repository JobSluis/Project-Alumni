@model ProjectAlumni.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
    <link href="@Url.Content("~/Content/Login.css")" rel="stylesheet" type="text/css" />
    <div class="row">
        <h1 style="text-align:center;">Registreren</h1>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {

            <div style="width:0;height:0;">@Html.AntiForgeryToken()</div>
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "email" })
            @Html.TextBoxFor(m => m.Username, new { placeholder = "Gebruikersnaam", @class = "email" })
            @Html.PasswordFor(m => m.Password, new { placeholder = "Wachtwoord", @class = "password" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Bevestig Wachtwoord", @class = "password" })
            @Html.TextBoxFor(m => m.Firstname, new { placeholder = "Voornaam", @class = "email" })
            @Html.TextBoxFor(m => m.Lastname, new { placeholder = "Achternaam", @class = "email" })
            @Html.TextBoxFor(m => m.DateOfBirth, new { placeholder = "Geboorte Datum", @class = "email", Type = "date" })
            @Html.TextBoxFor(m => m.GraduationYear, new { placeholder = "Afstudeer jaar", @class = "email", Type = "number" })


            <input type="submit" class="submit" value="Registreren" />
            <p class="register">
                @Html.ActionLink("Inloggen", "login")
            </p>
        }
    </div>
    <div class="error-messege">
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
<div class="background"></div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
